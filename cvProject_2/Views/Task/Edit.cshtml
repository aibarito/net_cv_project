@model _Task
@{
    ViewData["Title"] = "Edit Task";
}

<form method="post">
    <input asp-for="ProjectId" hidden />
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Edit Task</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Status"></label>
            <input asp-for="Status" class="form-control" placeholder="1 - ToDo, 2 - InProgress, 3 - Done" />
            <span asp-validation-for="Status" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Priority"></label>
            <input asp-for="Priority" class="form-control" placeholder="from 1 (min) to 100 (max)" />
            <span asp-validation-for="Priority" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Edit Task</button>
        <a asp-controller="Task" asp-action="Index" asp-route-id="@Model.ProjectId" class="btn btn-secondary"
            style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts
{
@{
    <partial name="_ValidationScriptsPartial" />
}
}