@model _Task
@{
    ViewData["Title"] = "Delete Task";
}

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <input asp-for="ProjectId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Task</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Description"></label>
            <input asp-for="Description" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="Status"></label>
            <input asp-for="Status" disabled class="form-control" placeholder="1 - ToDo, 2 - InProgress, 3 - Done" />
        </div>
        <div class="mb-3">
            <label asp-for="Priority"></label>
            <input asp-for="Priority" disabled class="form-control" placeholder="from 1 (min) to 100 (max)" />
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px">Delete</button>
        <a asp-controller="Task" asp-action="Index" asp-route-id="@Model.ProjectId" class="btn btn-secondary"
            style="width:150px">
            Back to List
        </a>
    </div>
</form>

@section Scripts
{
@{
    <partial name="_ValidationScriptsPartial" />
}
}